<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InternshipActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_gravity="start"
                android:layout_weight="0"
                android:backgroundTint="#00FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_backblack"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/textView53"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/inter_extrabold"
                android:text="Tengizshevroil"
                android:textAlignment="center"
                android:textColor="@color/blue3"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/imageButton11"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="end"
                android:layout_weight="0"
                android:backgroundTint="#00FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_plane_black2"
                android:tint="#00FFFFFF"
                tools:ignore="SpeakableTextPresentCheck,UseAppTint" />

        </LinearLayout>

        <ScrollView
            android:layout_width="404dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            tools:ignore="SpeakableTextPresentCheck">

            <LinearLayout
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="344dp"
                    android:layout_height="300dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/stroke">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView15"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            app:srcCompat="@drawable/tco_logo" />

                        <TextView
                            android:id="@+id/textView39"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_extrabold"
                            android:text="IT Specialist"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imageView16"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:srcCompat="@drawable/line" />

                        <TextView
                            android:id="@+id/textView44"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/inter_extrabold"
                            android:text="Atyrau. Kazakhstan"
                            android:textColor="#616161" />

                        <TextView
                            android:id="@+id/textView54"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/oxygen"
                            android:text="30days Internship"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/textView47"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/inter_extrabold"
                    android:text="Dear students of IT Speciality,"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView48"
                    android:layout_width="334dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/oxygen"
                    android:text="I hope this message finds you well. My name is Gulden Akhmediyarova, and I am reaching out from Tengizshevroil. We are excited to extend an invitation to students from Tengizshevroil who are eager to gain valuable hands-on experience in IT Speciality.  Our internship program is designed to provide students with a unique opportunity to apply their academic knowledge in a professional setting, develop practical skills, and contribute to meaningful projects. We believe that Tengizshevroil students possess the talent and dedication that aligns with our company values.  If you have students interested in internships, we encourage them to apply through our [application process/link]. We offer a dynamic learning environment, mentorship from experienced professionals, and exposure to real-world projects that will enhance their educational journey.  Thank you for considering this collaboration, and we look forward to welcoming passionate and driven students from Tengizshevroil to our internship program."
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="@color/blue2"
                    android:fontFamily="@font/oxygen_bold"
                    android:text="Send Message"
                    app:cornerRadius="10dp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>